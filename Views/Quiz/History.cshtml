@model List<QuizApp.Models.QuizAttempt>
@{
    ViewData["Title"] = "Riwayat Quiz";
}

<div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Riwayat Quiz</h1>
    <p class="text-gray-600 mt-2">Lihat semua quiz yang pernah Anda kerjakan</p>
</div>

@if (Model.Count == 0)
{
    <div class="text-center py-12">
        <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <p class="text-gray-500 text-lg mb-4">Anda belum mengerjakan quiz apapun.</p>
        <a asp-controller="Quiz" asp-action="Index" class="inline-flex items-center px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-lg transition">
            Mulai Quiz
        </a>
    </div>
}
else
{
    <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
        <table class="w-full">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quiz</th>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tanggal</th>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Skor</th>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Pelanggaran</th>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                @foreach (var attempt in Model)
                {
                    var percentage = attempt.MaxScore > 0 ? (double)attempt.Score / attempt.MaxScore * 100 : 0;
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">
                            <div class="font-medium text-gray-900">@attempt.Quiz?.Title</div>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-600">
                            @attempt.StartedAt.ToString("dd MMM yyyy, HH:mm")
                        </td>
                        <td class="px-6 py-4">
                            <span class="font-medium @(percentage >= 60 ? "text-green-600" : "text-red-600")">
                                @attempt.Score / @attempt.MaxScore
                            </span>
                            <span class="text-gray-500 text-sm">(@percentage.ToString("F0")%)</span>
                        </td>
                        <td class="px-6 py-4">
                            @if (attempt.Violations.Count > 0)
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                                    @attempt.Violations.Count pelanggaran
                                </span>
                            }
                            else
                            {
                                <span class="text-green-600 text-sm">Bersih</span>
                            }
                        </td>
                        <td class="px-6 py-4">
                            @if (attempt.IsCompleted)
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    Selesai
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                    Belum Selesai
                                </span>
                            }
                        </td>
                        <td class="px-6 py-4">
                            <a asp-controller="Quiz" asp-action="Result" asp-route-id="@attempt.Id" 
                               class="text-indigo-600 hover:text-indigo-800 font-medium text-sm">
                                Detail
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
