@model List<QuizApp.Models.Quiz>
@{
    ViewData["Title"] = "Daftar Quiz - VisionExam";
}

<div class="quiz-list-container">
    <!-- Header -->
    <div class="quiz-header">
        <div class="header-content">
            <h1 class="page-title">Daftar Quiz</h1>
            <p class="page-subtitle">Pilih quiz yang ingin Anda kerjakan</p>
        </div>
        <div class="header-actions">
            <a href="/Quiz/History" class="btn btn-secondary">
                <i class="fas fa-history"></i>
                Riwayat
            </a>
        </div>
    </div>

    @if (Model.Count == 0)
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="fas fa-clipboard-list"></i>
            </div>
            <h3>Belum Ada Quiz</h3>
            <p>Quiz belum tersedia. Silakan cek kembali nanti.</p>
        </div>
    }
    else
    {
        <!-- Filter & Search -->
        <div class="quiz-filters">
            <div class="search-box">
                <i class="fas fa-search"></i>
                <input type="text" placeholder="Cari quiz..." id="searchQuiz">
            </div>
            <div class="filter-chips">
                <button class="chip active" data-filter="all">Semua</button>
                <button class="chip" data-filter="available">Tersedia</button>
                <button class="chip" data-filter="completed">Selesai</button>
            </div>
        </div>

        <!-- Quiz Grid -->
        <div class="quiz-grid" id="quizGrid">
            @foreach (var quiz in Model)
            {
                <div class="quiz-card" data-quiz-id="@quiz.Id">
                    <div class="quiz-header">
                        <div class="quiz-icon">
                            <i class="fas fa-clipboard-check"></i>
                        </div>
                        <span class="quiz-badge">Quiz</span>
                    </div>
                    
                    <div class="quiz-body">
                        <h3 class="quiz-title">@quiz.Title</h3>
                        <p class="quiz-description">
                            @(string.IsNullOrEmpty(quiz.Description) ? "Tidak ada deskripsi" : quiz.Description)
                        </p>
                        
                        <div class="quiz-info">
                            <div class="info-item">
                                <i class="fas fa-question-circle"></i>
                                <span>@quiz.Questions.Count soal</span>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-clock"></i>
                                <span>@quiz.DurationMinutes menit</span>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-signal"></i>
                                <span>@(quiz.IsActive ? "Tersedia" : "Tidak Tersedia")</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="quiz-footer">
                        @if (quiz.IsActive)
                        {
                            <a href="/Quiz/Take/@quiz.Id" class="btn btn-primary btn-full">
                                <i class="fas fa-play"></i>
                                Mulai Quiz
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-disabled btn-full" disabled>
                                <i class="fas fa-lock"></i>
                                Tidak Tersedia
                            </button>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

<link rel="stylesheet" href="~/css/quiz.css" />
<script src="~/js/quiz.js"></script>