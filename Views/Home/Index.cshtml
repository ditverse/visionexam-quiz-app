@{
    ViewData["Title"] = "Selamat Datang";
}

<div class="text-center py-12">
    <!-- Hero Section -->
    <div class="mb-12">
        <h1 class="text-5xl font-bold text-gray-900 mb-4">
            Vision<span class="text-indigo-600">Exam</span>
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Aplikasi Quiz dengan Deteksi Gerakan Wajah untuk memastikan integritas ujian Anda.
        </p>
    </div>

    <!-- Features -->
    <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto mb-12">
        <div class="bg-white rounded-2xl shadow-lg p-8 card-hover">
            <div class="w-16 h-16 bg-indigo-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
                </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Quiz Interaktif</h3>
            <p class="text-gray-600">Kerjakan quiz dengan antarmuka yang mudah dan responsif.</p>
        </div>

        <div class="bg-white rounded-2xl shadow-lg p-8 card-hover">
            <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Deteksi Wajah</h3>
            <p class="text-gray-600">Teknologi ML untuk memantau gerakan wajah selama ujian.</p>
        </div>

        <div class="bg-white rounded-2xl shadow-lg p-8 card-hover">
            <div class="w-16 h-16 bg-cyan-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Laporan Detail</h3>
            <p class="text-gray-600">Lihat hasil quiz lengkap dengan catatan aktivitas.</p>
        </div>
    </div>

    <!-- CTA -->
    @if (User.Identity?.IsAuthenticated != true)
    {
        <div class="space-x-4">
            <a asp-controller="Auth" asp-action="Register" class="inline-flex items-center px-8 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-xl shadow-lg transition transform hover:scale-105">
                Mulai Sekarang
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
            </a>
            <a asp-controller="Auth" asp-action="Login" class="inline-flex items-center px-8 py-3 bg-white hover:bg-gray-50 text-indigo-600 font-semibold rounded-xl shadow-lg border-2 border-indigo-600 transition">
                Login
            </a>
        </div>
    }
    else
    {
        <a asp-controller="Quiz" asp-action="Index" class="inline-flex items-center px-8 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-xl shadow-lg transition transform hover:scale-105">
            Mulai Quiz
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
        </a>
    }
</div>
