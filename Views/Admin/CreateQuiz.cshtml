@{
    ViewData["Title"] = "Buat Quiz Baru - VisionExam";
}

<div class="quiz-form-container">
    <!-- Header -->
    <div class="form-header">
        <div class="header-breadcrumb">
            <a href="/Admin/Dashboard" class="breadcrumb-link">
                <i class="fas fa-arrow-left"></i>
                Kembali ke Dashboard
            </a>
        </div>
        <h1 class="page-title">Buat Quiz Baru</h1>
        <p class="page-subtitle">Buat quiz baru dengan soal-soal pilihan ganda</p>
    </div>

    <!-- Quiz Form -->
    <form asp-controller="Admin" asp-action="CreateQuiz" method="post" class="quiz-form">
        @Html.AntiForgeryToken()
        
        @if (ViewData["Error"] != null)
        {
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i>
                <span>@ViewData["Error"]</span>
            </div>
        }

        <!-- Quiz Information -->
        <div class="form-section">
            <h2 class="section-title">Informasi Quiz</h2>
            
            <div class="form-row">
                <div class="form-group">
                    <label for="title" class="form-label">
                        <i class="fas fa-heading"></i>
                        Judul Quiz *
                    </label>
                    <input type="text" id="title" name="title" class="form-control" 
                           placeholder="Masukkan judul quiz" required>
                </div>

                <div class="form-group">
                    <label for="duration" class="form-label">
                        <i class="fas fa-clock"></i>
                        Durasi (menit) *
                    </label>
                    <input type="number" id="duration" name="duration" class="form-control" 
                           placeholder="60" min="1" required>
                </div>
            </div>

            <div class="form-group">
                <label for="description" class="form-label">
                    <i class="fas fa-align-left"></i>
                    Deskripsi
                </label>
                <textarea id="description" name="description" class="form-control" rows="3"
                          placeholder="Deskripsi quiz (opsional)"></textarea>
            </div>

            <div class="form-group">
                <label class="checkbox-container">
                    <input type="checkbox" name="isActive" checked>
                    <span class="checkmark"></span>
                    Quiz Aktif
                </label>
            </div>
        </div>

        <!-- Questions Section -->
        <div class="form-section">
            <div class="section-header">
                <h2 class="section-title">Soal-Soal</h2>
                <button type="button" class="btn btn-primary" onclick="addQuestion()">
                    <i class="fas fa-plus"></i>
                    Tambah Soal
                </button>
            </div>

            <div id="questionsContainer">
                <!-- Questions will be added here dynamically -->
            </div>
        </div>

        <!-- Form Actions -->
        <div class="form-actions">
            <a href="/Admin/Dashboard" class="btn btn-secondary">
                <i class="fas fa-times"></i>
                Batal
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i>
                Buat Quiz
            </button>
        </div>
    </form>
</div>

<link rel="stylesheet" href="~/css/quiz-form.css" />
<script src="~/js/quiz-form.js"></script>