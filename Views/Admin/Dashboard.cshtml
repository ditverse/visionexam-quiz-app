@model List<QuizApp.Models.Quiz>
@{
    ViewData["Title"] = "Admin Dashboard - VisionExam";
}

<div class="admin-dashboard">
    <!-- Header -->
    <div class="dashboard-header">
        <div class="header-content">
            <h1 class="dashboard-title">Admin Dashboard</h1>
            <p class="dashboard-subtitle">Kelola quiz dan pantau statistik ujian</p>
        </div>
        <div class="header-actions">
            <a href="/Admin/CreateQuiz" class="btn btn-primary">
                <i class="fas fa-plus"></i>
                Quiz Baru
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-clipboard-list"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@Model.Count</div>
                <div class="stat-label">Total Quiz</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-play-circle"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@Model.Count(q => q.IsActive)</div>
                <div class="stat-label">Quiz Aktif</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-question-circle"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@Model.Sum(q => q.Questions.Count)</div>
                <div class="stat-label">Total Soal</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">--</div>
                <div class="stat-label">Total Peserta</div>
            </div>
        </div>
    </div>

    <!-- Quiz Management -->
    <div class="quiz-management">
        <div class="section-header">
            <h2 class="section-title">Daftar Quiz</h2>
            <div class="section-actions">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Cari quiz..." id="searchQuiz">
                </div>
                <select class="filter-select" id="filterStatus">
                    <option value="">Semua Status</option>
                    <option value="active">Aktif</option>
                    <option value="inactive">Nonaktif</option>
                </select>
            </div>
        </div>

        @if (Model.Count == 0)
        {
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fas fa-clipboard"></i>
                </div>
                <h3>Belum Ada Quiz</h3>
                <p>Mulai dengan membuat quiz pertama Anda</p>
                <a href="/Admin/CreateQuiz" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    Buat Quiz Baru
                </a>
            </div>
        }
        else
        {
            <div class="quiz-grid" id="quizGrid">
                @foreach (var quiz in Model)
                {
                    <div class="quiz-card" data-status="@quiz.IsActive.ToString().ToLower()">
                        <div class="quiz-header">
                            <h3 class="quiz-title">@quiz.Title</h3>
                            <span class="quiz-status @(quiz.IsActive ? "status-active" : "status-inactive")">
                                @(quiz.IsActive ? "Aktif" : "Nonaktif")
                            </span>
                        </div>
                        
                        <div class="quiz-content">
                            <p class="quiz-description">
                                @(string.IsNullOrEmpty(quiz.Description) ? "Tidak ada deskripsi" : quiz.Description)
                            </p>
                            
                            <div class="quiz-stats">
                                <div class="quiz-stat">
                                    <i class="fas fa-question-circle"></i>
                                    <span>@quiz.Questions.Count soal</span>
                                </div>
                                <div class="quiz-stat">
                                    <i class="fas fa-clock"></i>
                                    <span>@quiz.DurationMinutes menit</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="quiz-actions">
                            <a href="/Admin/EditQuiz/@quiz.Id" class="btn btn-sm btn-secondary">
                                <i class="fas fa-edit"></i>
                                Edit
                            </a>
                            <form asp-controller="Admin" asp-action="DeleteQuiz" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@quiz.Id" />
                                <button type="submit" class="btn btn-sm btn-danger" 
                                        onclick="return confirm('Apakah Anda yakin ingin menghapus quiz ini?')">
                                    <i class="fas fa-trash"></i>
                                    Hapus
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<link rel="stylesheet" href="~/css/admin.css" />
<script src="~/js/admin.js"></script>